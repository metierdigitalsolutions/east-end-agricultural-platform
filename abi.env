# East End Agricultural Platform Environment Configuration
# Copy this file to .env.local for production use

# Application Settings
NEXT_PUBLIC_APP_NAME="East End Agricultural Platform"
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# Database Configuration (if needed)
# DATABASE_URL="your_database_connection_string"

# Email Configuration for Nodemailer (Hostinger SMTP)
SMTP_HOST="smtp.hostinger.com"
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER="your-email@yourdomain.com"
SMTP_PASS="your-email-password"

# Client Email for Contact Form Submissions
CLIENT_EMAIL="client@yourdomain.com"
ADMIN_EMAIL="admin@yourdomain.com"

# Authentication (if using auth)
NEXTAUTH_SECRET="your-nextauth-secret-key-here"
NEXTAUTH_URL="http://localhost:3000"

# API Keys (add as needed)
# GOOGLE_MAPS_API_KEY="your-google-maps-api-key"
# CLOUDINARY_CLOUD_NAME="your-cloudinary-cloud-name"
# CLOUDINARY_API_KEY="your-cloudinary-api-key"
# CLOUDINARY_API_SECRET="your-cloudinary-api-secret"

# Development Settings
NODE_ENV="development"
